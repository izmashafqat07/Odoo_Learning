    <!-- New Units -->
    <record id="uom_40kg" model="uom.uom">
        <field name="name">40 Kilogram</field>
        <field name="category_id" ref="uom.product_uom_categ_kgm"/>
        <field name="uom_type">bigger</field>
        <!-- <field name="factor_inv" eval="40.0"/> -->
         <field name="factor_inv">40.0</field>
        <field name="rounding" eval="0.000001"/>
        <field name="fbr_code">U1000008</field>
    </record>

    <record id="uom_carat" model="uom.uom">
        <field name="name">Carat</field>
        <field name="category_id" ref="uom.product_uom_categ_kgm"/>
        <field name="uom_type">smaller</field>
        <field name="factor" eval="5000.0"/> <!-- 1 kg = 5000 carats -->
        <field name="rounding" eval="0.000001"/>
        <field name="fbr_code">U1000053</field>
    </record>

    <record id="uom_barrel" model="uom.uom">
        <field name="name">Barrel (Oil)</field>
