<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Action menu: Publish Selected -->
    <record id="obe_peo_action_publish_selected" model="ir.actions.server">
        <field name="name">Publish Selected</field>
        <!-- Make it operate on and appear for obe.peo list view -->
        <field name="model_id" ref="model_obe_peo"/>
        <field name="binding_model_id" ref="model_obe_peo"/>
        <field name="binding_type">action</field>
        <field name="binding_view_types">list</field>
        <field name="state">code</field>
        <!-- IMPORTANT: one-line CDATA, no leading spaces/newlines -->
        <field name="code"><![CDATA[recs = env['obe.peo'].browse(env.context.get('active_ids', [])); recs.action_publish_selected()]]></field>
    </record>

    <!-- Action menu: Unpublish Selected -->
    <record id="obe_peo_action_unpublish_selected" model="ir.actions.server">
        <field name="name">Unpublish Selected</field>
        <field name="model_id" ref="model_obe_peo"/>
        <field name="binding_model_id" ref="model_obe_peo"/>
        <field name="binding_type">action</field>
        <field name="binding_view_types">list</field>
        <field name="state">code</field>
        <field name="code"><![CDATA[recs = env['obe.peo'].browse(env.context.get('active_ids', [])); recs.action_unpublish_selected()]]></field>
    </record>
</odoo>
