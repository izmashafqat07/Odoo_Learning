<odoo>
    <record id="view_move_form_fbr" model="ir.ui.view">
        <field name="name">account.move.form.fbr</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet/notebook" position="inside">
                <page string="FBR">
                    <group>
                        <field name="fbr_state" readonly="1"/>
                        <field name="fbr_invoice_number" readonly="1"/>
                        <field name="fbr_irn" readonly="1"/>
                        <field name="fbr_submission_date" readonly="1"/>
                        <field name="fbr_last_error" readonly="1"/>
                        <field name="fbr_qr_code" widget="image"/>
                    </group>
                    <footer>
                        <!-- Odoo 17/18: attrs removed; use boolean expressions -->
                        <button name="action_send_to_fbr" type="object" string="Send to FBR" class="btn-primary"
                                invisible="state != 'posted' or fbr_state == 'submitted'"/>
                        <button name="action_retry_fbr" type="object" string="Retry FBR"
                                invisible="fbr_state == 'submitted'"/>
                        <button name="action_cancel_fbr" type="object" string="Cancel on FBR"
                                invisible="fbr_state != 'submitted'"/>
                    </footer>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
