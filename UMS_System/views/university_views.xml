<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Program List View -->
    <record id="view_obe_program_list" model="ir.ui.view">
        <field name="name">obe.program.list</field>
        <field name="model">obe.program</field>
        <field name="arch" type="xml">
            <list string="Programs">
                <field name="name"/>
                <field name="code"/>
                <field name="duration"/>
                <field name="active"/>
                
            </list>
        </field>
    </record>
    
    <!-- Program Form View -->
    <record id="view_obe_program_form" model="ir.ui.view">
        <field name="name">obe.program.form</field>
        <field name="model">obe.program</field>
        <field name="arch" type="xml">
            <form string="Program">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="duration"/>
                        </group>
                        <group>
                            <field name="active"/>
                        </group>
                    </group>
                    <group>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Course List View -->
    <record id="view_obe_course_list" model="ir.ui.view">
        <field name="name">obe.course.list</field>
        <field name="model">obe.course</field>
        <field name="arch" type="xml">
            <list string="Courses">
                <field name="name"/>
                <field name="code"/>
                <field name="program_id"/>
                <field name="credits"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <!-- Course Form View -->
    <record id="view_obe_course_form" model="ir.ui.view">
        <field name="name">obe.course.form</field>
        <field name="model">obe.course</field>
        <field name="arch" type="xml">
            <form string="Course">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="program_id"/>
                        </group>
                        <group>
                            <field name="credits"/>
                            <field name="active"/>
                        </group>
                    </group>
                    <group>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Actions -->
    <record id="action_obe_program" model="ir.actions.act_window">
        <field name="name">Programs</field>
        
        <field name="res_model">obe.program</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_active': 1}</field>
        <!-- <field name="groups_id" eval="[(6, 0, [ref('group_obe_admin'), ref('group_obe_coordinator')])]"/> -->
    </record>

    <record id="action_obe_course" model="ir.actions.act_window">
        <field name="name">Courses</field>
        <field name="res_model">obe.course</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_active': 1}</field>
        <!-- <field name="groups_id" eval="[(6, 0, [ref('group_obe_admin'), ref('group_obe_coordinator'), ref('group_obe_faculty')])]"/> -->
    </record>
</odoo>