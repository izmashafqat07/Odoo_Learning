<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Student List View -->
    <record id="view_obe_student_list" model="ir.ui.view">
        <field name="name">obe.student.list</field>
        <field name="model">obe.student</field>
        <field name="arch" type="xml">
            <list string="Students">
                <field name="name"/>
                <field name="student_id"/>
                <field name="program_id"/>
                <field name="enrollment_date"/>
                <field name="graduation_date"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <!-- Student Form View -->
    <record id="view_obe_student_form" model="ir.ui.view">
        <field name="name">obe.student.form</field>
        <field name="model">obe.student</field>
        <field name="arch" type="xml">
            <form string="Student">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="student_id"/>
                            <field name="program_id"/>
                        </group>
                        <group>
                            <field name="enrollment_date"/>
                            <field name="graduation_date"/>
                            <field name="active"/>
                            <field name="user_id"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Faculty List View -->
    <record id="view_obe_faculty_list" model="ir.ui.view">
        <field name="name">obe.faculty.list</field>
        <field name="model">obe.faculty</field>
        <field name="arch" type="xml">
            <list string="Faculty">
                <field name="name"/>
                <field name="faculty_id"/>
                <field name="department"/>
                <field name="designation"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <!-- Faculty Form View -->
    <record id="view_obe_faculty_form" model="ir.ui.view">
        <field name="name">obe.faculty.form</field>
        <field name="model">obe.faculty</field>
        <field name="arch" type="xml">
            <form string="Faculty">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="faculty_id"/>
                            <field name="department"/>
                        </group>
                        <group>
                            <field name="designation"/>
                            <field name="active"/>
                            <field name="user_id"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Actions -->
    <record id="action_obe_student" model="ir.actions.act_window">
        <field name="name">Students</field>
        <field name="res_model">obe.student</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_active': 1}</field>
        <!-- <field name="groups_id" eval="[(6, 0, [ref('group_obe_admin'), ref('group_obe_coordinator')])]"/> -->
    </record>

    <record id="action_obe_faculty" model="ir.actions.act_window">
        <field name="name">Faculty</field>
        <field name="res_model">obe.faculty</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_active': 1}</field>
        <!-- <field name="groups_id" eval="[(6, 0, [ref('group_obe_admin'), ref('group_obe_coordinator')])]"/> -->
    </record>
</odoo>