<odoo>
  <record id="module_category_education" model="ir.module.category">
    <field name="name">Education</field>
    <field name="sequence">10</field>
    <field name="visible" eval="1"/>
  </record>

  <record id="group_education_faculty" model="res.groups">
    <field name="name">Faculty</field>
    <field name="category_id" ref="UMS_System.module_category_education"/>
    <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
  </record>

  <record id="group_education_student" model="res.groups">
    <field name="name">Student</field>
    <field name="category_id" ref="UMS_System.module_category_education"/>
    
    <field name="implied_ids" eval="[(4, ref('base.group_portal'))]"/>
  </record>

  <record id="group_education_staff" model="res.groups">
    <field name="name">Staff</field>
    <field name="category_id" ref="UMS_System.module_category_education"/>
    <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
  </record>

  <record id="group_education_exam" model="res.groups">
    <field name="name">Examination</field>
    <field name="category_id" ref="UMS_System.module_category_education"/>
    <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
  </record>

  <record id="group_education_admin" model="res.groups">
    <field name="name">Admin</field>
    <field name="category_id" ref="UMS_System.module_category_education"/>
    <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
  </record>
</odoo>
