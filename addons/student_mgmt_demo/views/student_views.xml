<odoo>
    <record id="view_student_tree" model="ir.ui.view">
        <field name="name">student.mgmt.tree</field>
        <field name="model">student.mgmt</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sequence"/>
                <field name="name"/>
                <field name="email"/>
                <field name="phone"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="view_student_form" model="ir.ui.view">
        <field name="name">student.mgmt.form</field>
        <field name="model">student.mgmt</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="sequence"/>
                        <field name="name"/>
                        <field name="email"/>
                        <field name="phone"/>
                        <field name="state"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_student_mgmt" model="ir.actions.act_window">
        <field name="name">Students</field>
        <field name="res_model">student.mgmt</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_student_root" name="Student Management"/>
    <menuitem id="menu_student_mgmt" name="Students"
              parent="menu_student_root" action="action_student_mgmt"/>
</odoo>
