<odoo>
    <record id="view_library_request_tree" model="ir.ui.view">
        <field name="name">library.request.list</field>
        <field name="model">library.request</field>
        <field name="type">list</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="email"/>
                <field name="book_title"/>
                <field name="notes"/>
            </list>
        </field>
    </record>

    <record id="view_library_request_form" model="ir.ui.view">
        <field name="name">library.request.form</field>
        <field name="model">library.request</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="email"/>
                        <field name="book_title"/>
                        <field name="notes"/>
                        <field name="state"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_library_request" model="ir.actions.act_window">
        <field name="name">Library Requests</field>
        <field name="res_model">library.request</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_library_root_requests" name="Library" sequence="10"/>
    <menuitem id="menu_library_requests" name="Requests" parent="menu_library_root_requests" action="action_library_request"/>
</odoo>