<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_hms_hr_payroll_list" model="ir.ui.view">
        <field name="name">hms.hr.payroll.list</field>
        <field name="model">hms.hr.payroll</field>
        <field name="arch" type="xml">
            <list>
                <field name="employee_id"/>
                <field name="month"/>
                <field name="amount"/>
                <field name="note"/>
            </list>
        </field>
    </record>

    <record id="view_hms_hr_payroll_form" model="ir.ui.view">
        <field name="name">hms.hr.payroll.form</field>
        <field name="model">hms.hr.payroll</field>
        <field name="arch" type="xml">
            <form string="Payroll">
                <sheet>
                    <group>
                        <field name="employee_id"/>
                        <field name="month"/>
                        <field name="amount"/>
                        <field name="note" placeholder="Optional remarks..."/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_hms_hr_payroll_search" model="ir.ui.view">
        <field name="name">hms.hr.payroll.search</field>
        <field name="model">hms.hr.payroll</field>
        <field name="arch" type="xml">
            <search>
                <field name="employee_id"/>
                <field name="month"/>
                <group expand="0" string="Group By">
                    <filter name="group_employee" context="{'group_by':'employee_id'}" string="Employee"/>
                    <filter name="group_month" context="{'group_by':'month'}" string="Month"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_hms_hr_payroll" model="ir.actions.act_window">
        <field name="name">Payrolls</field>
        <field name="res_model">hms.hr.payroll</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_hms_hr_payroll_search"/>
    </record>

    <menuitem id="menu_hms_hr_payrolls" name="Payrolls" parent="menu_hms_hr_root" action="action_hms_hr_payroll"/>
</odoo>
