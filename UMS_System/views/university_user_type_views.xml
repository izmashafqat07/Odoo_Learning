<odoo>
    <record id="view_university_user_type_list" model="ir.ui.view">
        <field name="name">university.user.type.list</field>
        <field name="model">university.user.type</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="group_ids"/>
            </list>
        </field>
    </record>

    <record id="view_university_user_type_form" model="ir.ui.view">
        <field name="name">university.user.type.form</field>
        <field name="model">university.user.type</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="group_ids" widget="many2many_tags"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- <menuitem id="menu_university_root" name="University"/> -->
    <!-- <menuitem id="menu_university_user_types" parent="menu_university_root"
              name="User Types" action="action_university_user_types"/>-->

    <record id="action_university_user_types" model="ir.actions.act_window">
        <field name="name">User Types</field>
        <field name="res_model">university.user.type</field>
        <field name="view_mode">list,form</field>
    </record> 
</odoo>
