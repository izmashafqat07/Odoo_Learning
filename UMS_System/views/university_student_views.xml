<!-- views/university_student_views.xml -->
<odoo>
    <record id="view_university_student_form" model="ir.ui.view">
        <field name="name">university.student.form</field>
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <form string="Student">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="department_id"/>
                        <field name="enrollment_number"/>
                        <field name="roll_number"/>
                        <field name="program"/>
                        <field name="batch"/>
                        <field name="admission_date"/>
                        <field name="date_of_birth"/>
                        <field name="semester"/>
                        <field name="section"/>
                        <field name="cgpa"/>
                        
                      
                     
                        <field name="student_status"/>
                        <field name="guardian_name"/>
                        <field name="guardian_phone"/>
                       
                        <field name="emergency_contact"/>
                    </group>
                </sheet>

                <footer>
                    <button name="action_open_user_form"
                            type="object"
                            string="Create User Account"
                            class="btn-primary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="view_university_student_list" model="ir.ui.view">
        <field name="name">university.student.list</field>
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <list string="Students">
                <field name="name" />
                <field name="department_id" />
                <field name="enrollment_number" />
                <field name="program" />
                <field name="batch" />
                <field name="semester" />
                <field name="cgpa" />
                <field name="student_status" />
            </list>
        </field>
    </record>

    <record id="action_university_student" model="ir.actions.act_window">
        <field name="name">Students</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('partner_type','=','student')]</field>
        <field name="view_id" ref="view_university_student_list"/>
        <field name="views" eval="[(ref('view_university_student_list'),'list'),
                                   (ref('view_university_student_form'),'form')]"/>
    </record>
</odoo>
