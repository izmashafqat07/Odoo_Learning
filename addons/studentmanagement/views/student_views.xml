<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <!-- Window Action -->
  <record id="action_school_students" model="ir.actions.act_window">
    <field name="name">Students</field>
    <field name="res_model">school.student</field>
    <field name="view_mode">list,form</field>
    <field name="help" type="html">
      <p class="o_view_nocontent_smiling_face">Create a student record.</p>
    </field>
  </record>

  <!-- Top Menu -->
  <menuitem id="menu_school_root" name="School" sequence="10"/>

  <!-- Students Menu (references action above) -->
  <menuitem id="menu_school_students"
            name="Students"
            parent="menu_school_root"
            action="action_school_students"
            sequence="10"/>

  <!-- Search / Filter (optional quick search view) -->
  <record id="view_school_student_search" model="ir.ui.view">
    <field name="name">school.student.search</field>
    <field name="model">school.student</field>
    <field name="type">search</field>
    <field name="arch" type="xml">
      <search>
        <field name="name"/>
        <field name="roll_number"/>
        <filter name="filter_class" string="By Class" domain="[]"/>
      </search>
    </field>
  </record>

  <!-- List view -->
  <record id="view_school_student_list" model="ir.ui.view">
    <field name="name">school.student.list</field>
    <field name="model">school.student</field>
    <field name="type">list</field>
    <field name="arch" type="xml">
      <list string="Students">
        <field name="name" />
        <field name="roll_number" />
        <field name="class_name" />
        <field name="age" />
        <field name="gender" />
      </list>
    </field>
  </record>

  <!-- Form view -->
  <record id="view_school_student_form" model="ir.ui.view">
    <field name="name">school.student.form</field>
    <field name="model">school.student</field>
    <field name="type">form</field>
    <field name="arch" type="xml">
      <form string="Student">
        <sheet>
          <group>
            <field name="name"/>
            <field name="roll_number"/>
            <field name="class_name"/>
            <field name="gender"/>
          </group>
          <group>
            <field name="dob"/>
            <field name="age" readonly="1"/>
            <field name="phone"/>
            <field name="email"/>
          </group>
          <notebook>
            <page string="Notes">
              <field name="notes"/>
            </page>
          </notebook>
        </sheet>
      </form>
    </field>
  </record>
</odoo>
