<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="fbr_di_view_move_form_inherit_final" model="ir.ui.view">
    <field name="name">account.move.form.fbr.di.final</field>
    <field name="model">account.move</field>
    <field name="inherit_id" ref="account.view_move_form"/>
    <field name="arch" type="xml">

      <!-- (your header + FBR page blocks remain exactly as before) -->

      <!-- Point the One2many to our custom LIST subview -->
      <xpath expr="//field[@name='invoice_line_ids']" position="attributes">
        <attribute name="context">
          {
            'list_view_ref': 'fbr_fbr_integration.fbr_invoice_line_list',
            'tree_view_ref': 'fbr_fbr_integration.fbr_invoice_line_list'
          }
        </attribute>
      </xpath>

    </field>
  </record>
</odoo>
