<?xml version="1.0" encoding="utf-8"?>
<odoo>

  
  <record id="partner_self_read" model="ir.rule">
    <field name="name">Partners: Read own partner (Portal only)</field>
    <field name="model_id" ref="base.model_res_partner"/>
    <field name="domain_force">[('id', '=', user.partner_id.id)]</field>
 
    <field name="groups" eval="[(4, ref('base.group_portal'))]"/>
  </record>
  
 
  <record id="faculty_students_in_my_department" model="ir.rule">
    <field name="name">Faculty: Students in my department (exclude self)</field>
    <field name="model_id" ref="base.model_res_partner"/>
    <field name="domain_force">
      [('partner_type','=','student'),
       ('department_id','=', user.partner_id.department_id.id),
       ('id','!=', user.partner_id.id)]
    </field>
    <field name="groups" eval="[(4, ref('UMS_System.group_education_faculty'))]"/>
  </record>
   

  <record id="admin_access_all_partners" model="ir.rule">
    <field name="name">Admin: Access All Partners</field>
    <field name="model_id" ref="base.model_res_partner"/>
    <field name="domain_force">[(1,'=',1)]</field>
    <field name="groups" eval="[(4, ref('UMS_System.group_education_admin'))]"/>
  </record>

</odoo>
