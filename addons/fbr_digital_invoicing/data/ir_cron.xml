<!-- numbercall removed for Odoo 17/18 -->
<odoo>
  <record id="ir_cron_fbr_retry" model="ir.cron">
    <field name="name">Retry FBR submissions</field>
    <field name="model_id" ref="account.model_account_move"/>
    <field name="state">code</field>
    <field name="code">env['account.move'].sudo().search([('fbr_state','in',('failed','pending'))]).action_retry_fbr()</field>
    <field name="interval_number">1</field>
    <field name="interval_type">hours</field>
    <field name="active">True</field>
  </record>
</odoo>
