<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="fbr_invoice_line_list" model="ir.ui.view">
    <field name="name">account.move.line.list.fbr</field>
    <field name="model">account.move.line</field>
    <field name="type">list</field>
    <field name="arch" type="xml">
      <!-- List view (Odoo 17/18) replacing legacy <tree> -->
      <list editable="bottom">
        <field name="sequence" invisible="1"/>
        <field name="name"/>
        <field name="product_id"/>
        <field name="quantity"/>
        <field name="product_uom_id"/>
        <field name="price_unit"/>
        <field name="discount"/>
        <field name="tax_ids"/>
        <field name="price_subtotal" readonly="1"/>
        <field name="price_total" readonly="1"/>

        <!-- FBR extras (computed) -->
        <field name="fbr_extra_tax_amount" readonly="1"/>
        <field name="fbr_further_tax_amount" readonly="1"/>
        <field name="fbr_line_total_incl_all" readonly="1"/>
      </list>
    </field>
  </record>
</odoo>
