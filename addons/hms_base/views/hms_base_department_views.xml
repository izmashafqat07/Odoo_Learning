<odoo>
    <!-- list View -->
    <record id="view_hms_base_department_list" model="ir.ui.view">
        <field name="name">hms.base.department.list</field>
        <field name="model">hms.base.department</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="description"/>
            </list>
        </field>
    </record>
    <!-- Form View -->
    <record id="view_hms_base_department_form" model="ir.ui.view">
        <field name="name">hms.base.department.form</field>
        <field name="model">hms.base.department</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                    </group>
                    <notebook>
                        <page string="Doctors">
                            <field name="doctor_ids">
                                <list>
                                    <field name="name"/>
                                    <field name="specialization"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_hms_base_department" model="ir.actions.act_window">
        <field name="name">Departments</field>
        <field name="res_model">hms.base.department</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_hms_base_root" name="HMS Base"/>
    
    <menuitem id="menu_hms_base_department" name="Departments"
              parent="menu_hms_base_root"/>
    
              <menuitem id="menu_hms_base_department_department" name="Departments"
              parent="menu_hms_base_department"
              action="action_hms_base_department"/>
</odoo>
