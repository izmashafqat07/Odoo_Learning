<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <record id="view_hms_base_patient_form" model="ir.ui.view">
        <field name="name">hms.base.patient.form</field>
        <field name="model">hms.base.patient</field>
        <!-- <field name="inherit_id" ref="base.view_partner_form"/> -->
        <field name="arch" type="xml">
            <form string="Patient">
            <group>
                <field name="name"/>
                <field name="is_patient"/>
                <field name="dob"/>
                <field name="gender"/>
                <field name="blood_type"/>
                <field name="allergies"/>
                <field name="emergency_contact"/>
                <field name="doctor_id"/>
            </group>
        </form>
        </field>
    </record>


    <record id="view_hms_base_patient_list" model="ir.ui.view">
        <field name="name">hms.base.patient.list</field>
        <field name="model">hms.base.patient</field>
        <field name="arch" type="xml">
            <list string="Patients">
                <field name="name"/>
                <field name="gender"/>
                <field name="dob"/>
                <field name="blood_type"/>
            </list>
        </field>
    </record>

    <record id="action_hms_base_patient" model="ir.actions.act_window">
        <field name="name">Patients</field>
        <field name="res_model">hms.base.patient</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('is_patient', '=', True)]</field>
    </record>

    <menuitem id="menu_hms_base_root" name="HMS" />
    <menuitem id="menu_hms_base_patient" name="Patients" parent="menu_hms_base_root"/>
    <menuitem id="menu_hms_base_patient_patient" name="Patients" action="action_hms_base_patient" parent="menu_hms_base_patient"/>

</odoo>