<odoo>
    <record id="view_move_form_inherit_fbr_mock" model="ir.ui.view">
        <field name="name">account.move.form.fbr.mock.button</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <!-- Add a header button to send invoice to the mock server -->
            <xpath expr="//header" position="inside">
                <button name="action_send_to_fbr_mock"
                        type="object"
                        string="Send to FBR (Mock)"
                        class="oe_highlight"
                        invisible="state != 'posted' or move_type not in ('out_invoice', 'out_refund')"/>
                <span class="oe_stat_button" invisible="fbr_status == 'not_sent'">
                    <field name="fbr_status" widget="badge" readonly="1"/>
                </span>
            </xpath>
            <!-- Show mock result fields somewhere on the form -->
            <xpath expr="//sheet/notebook" position="inside">
                <page string="FBR Mock">
                    <group>
                        <field name="fbr_status" readonly="1"/>
                        <field name="fbr_invoice_number" readonly="1"/>
                        <field name="fbr_sent_at" readonly="1"/>
                        <field name="fbr_request_payload" readonly="1" widget="text"/>
                        <field name="fbr_last_response" readonly="1" widget="text"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>