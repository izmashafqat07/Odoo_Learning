<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_res_config_settings_fbr_di" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.fbr.di</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form" position="inside">
                <div class="app_settings_block" data-string="FBR Digital Invoicing" string="FBR Digital Invoicing">
                    <h2>FBR Digital Invoicing</h2>

                    <div class="row mt16">
                        <div class="col-12 col-lg-6">
                            <label for="fbr_di_base_url"/>
                            <field name="fbr_di_base_url"/>
                            <div class="text-muted">
                                Example: https://gw.fbr.gov.pk (Prod) or http://localhost:5000 (Sandbox/Mock)
                            </div>
                        </div>
                        <div class="col-12 col-lg-6">
                            <label for="fbr_di_bearer_token"/>
                            <field name="fbr_di_bearer_token"/>
                        </div>
                    </div>

                    <div class="row mt16">
                        <div class="col-12 col-lg-4">
                            <label for="fbr_di_scenario_id"/>
                            <field name="fbr_di_scenario_id"/>
                        </div>
                        <div class="col-12 col-lg-4">
                            <label for="fbr_di_seller_ntn_cnic"/>
                            <field name="fbr_di_seller_ntn_cnic"/>
                        </div>
                        <div class="col-12 col-lg-4">
                            <label for="fbr_di_seller_province"/>
                            <field name="fbr_di_seller_province"/>
                        </div>
                    </div>

                    <div class="row mt16">
                        <div class="col-12 col-lg-12">
                            <label for="fbr_di_seller_address"/>
                            <field name="fbr_di_seller_address"/>
                        </div>
                    </div>

                </div>
            </xpath>
        </field>
    </record>

</odoo>
