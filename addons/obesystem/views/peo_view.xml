<odoo>
    <!-- ACTION stays same id to avoid menu changes -->
    <record id="action_peo" model="ir.actions.act_window">
        <field name="name">PEOs</field>
        <field name="res_model">obesystem.peo</field>
        <field name="view_mode">list,form</field>
        <field name="help">Manage Program Educational Objectives</field>
    </record>

    <!-- LIST -->
    <record id="view_peo_list" model="ir.ui.view">
        <field name="name">obesystem.peo.list</field>
        <field name="model">obesystem.peo</field>
        <field name="arch" type="xml">
            <list string="Program Educational Objectives" create="true" edit="false" delete="true">
                <header>
                    <button name="action_publish_selected" type="object"
                            string="Publish Selected" class="btn-primary"
                            confirm="Publish selected Unpublished PEOs?"/>
                    <button name="action_unpublish_selected" type="object"
                            string="Unpublish Selected" class="btn-secondary"
                            confirm="Unpublish selected Published PEOs?"/>
                </header>
                <field name="display_name" string="PEO"/>
                <field name="title"/>
                <field name="document_id"/>
                <field name="document_note" optional="hide"/>
                <field name="description" optional="show"/>
                <field name="state" widget="badge"
                       decoration-success="state == 'published'"
                       decoration-info="state == 'draft'"/>
                <field name="user_id"/>
                <field name="create_date"/>
            </list>
        </field>
    </record>

    <!-- FORM -->
    <record id="view_peo_form" model="ir.ui.view">
        <field name="name">obesystem.peo.form</field>
        <field name="model">obesystem.peo</field>
        <field name="arch" type="xml">
            <form string="Program Educational Objective">
                <header>
                    <button name="action_publish_single" type="object"
                            string="Publish" class="btn-primary"
                            invisible="state == 'published'"/>
                    <button name="action_unpublish_single" type="object"
                            string="Unpublish" class="btn-secondary"
                            invisible="state == 'draft'"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,published" readonly="1"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="title" readonly="state == 'published'"/>
                        </group>
                        <group>
                            <field name="document_id"
                                   domain="[('state','=','published')]"
                                   options="{'no_create_edit': True, 'no_open': False}"
                                   placeholder="Select a Published Document"
                                   readonly="state == 'published'"/>
                            <field name="document_note"
                                   placeholder="Clause / Section (optional)"
                                   readonly="state == 'published'"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <field name="description" readonly="state == 'published'"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- SEARCH -->
    <record id="view_peo_search" model="ir.ui.view">
        <field name="name">obesystem.peo.search</field>
        <field name="model">obesystem.peo</field>
        <field name="arch" type="xml">
            <search string="Search PEOs">
                <field name="title" string="Title"/>
                <field name="document_id" string="Document"/>
                <field name="description" string="Description"/>
                <field name="user_id" string="Created by"/>
                <filter string="Unpublished" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Published" name="published" domain="[('state', '=', 'published')]"/>
                <separator/>
                <filter string="My PEOs" name="my_peos" domain="[('user_id', '=', uid)]"/>
                <group expand="0" string="Group By">
                    <filter string="Status" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Document" name="group_document" context="{'group_by': 'document_id'}"/>
                    <filter string="Created by" name="group_user" context="{'group_by': 'user_id'}"/>
                    <filter string="Creation Date" name="group_create_date" context="{'group_by': 'create_date:month'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- MENUS (reuse your existing root menu) -->
    <menuitem id="menu_obesystem" name="OBE System"/>
    <menuitem id="menu_peo" name="PEOs" parent="menu_obesystem" action="action_peo"/>
</odoo>
