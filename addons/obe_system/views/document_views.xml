<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <!-- TREE -->
  <record id="view_obe_document_tree" model="ir.ui.view">
    <field name="name">obe.document.tree</field>
    <field name="model">obe.document</field>
    <field name="arch" type="xml">
      <list string="Reference Documents" create="true" delete="true">
        <field name="sequence" widget="handle"/>
        <field name="name"/>
        <field name="reference"/>
        <field name="version"/>
        <field name="type"/>
        <field name="effective_date"/>
        <field name="state" widget="badge"
               decoration-success="state == 'published'"
               decoration-info="state == 'draft'"/>
      </list>
    </field>
  </record>

  <!-- FORM -->
  <record id="view_obe_document_form" model="ir.ui.view">
    <field name="name">obe.document.form</field>
    <field name="model">obe.document</field>
    <field name="arch" type="xml">
      <form string="Reference Document">
        <header>
          <button name="action_publish" type="object" string="Publish"
                  class="btn-primary" invisible="state=='published'"/>
          <button name="action_unpublish" type="object" string="Unpublish"
                  class="btn-secondary" invisible="state=='draft'"/>
          <field name="state" widget="statusbar" statusbar_visible="draft,published" readonly="1"/>
        </header>
        <sheet>
          <group>
            <group>
              <field name="name"/>
              <field name="reference"/>
              <field name="version"/>
              <field name="type"/>
              <field name="effective_date"/>
            </group>
            <group>
              <field name="attachment_ids" widget="many2many_binary"/>
            </group>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <!-- SEARCH -->
  <record id="view_obe_document_search" model="ir.ui.view">
    <field name="name">obe.document.search</field>
    <field name="model">obe.document</field>
    <field name="arch" type="xml">
      <search string="Search Documents">
        <field name="name"/>
        <field name="reference"/>
        <field name="type"/>
        <filter string="Draft" name="draft" domain="[('state','=','draft')]"/>
        <filter string="Published" name="published" domain="[('state','=','published')]"/>
        <group expand="0" string="Group By">
          <filter string="Type" name="group_type" context="{'group_by':'type'}"/>
          <filter string="Status" name="group_state" context="{'group_by':'state'}"/>
        </group>
      </search>
    </field>
  </record>

  <!-- ACTION -->
  <record id="action_obe_document" model="ir.actions.act_window">
    <field name="name">Reference Documents</field>
    <field name="res_model">obe.document</field>
    <field name="view_mode">list,form</field>
    <field name="view_id" ref="view_obe_document_tree"/>
    <field name="search_view_id" ref="view_obe_document_search"/>
  </record>

</odoo>
