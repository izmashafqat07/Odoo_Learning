<?xml version="1.0"?>
<odoo>
    <data noupdate="1">

        <!-- University Default User Template -->
        <record id="university_default_user" model="res.users">
            <field name="name">University Default User</field>
            <field name="login">universitytemplate</field>
            <field name="active" eval="False"/> <!-- should not be a real login -->
            <!-- Assign only minimal groups -->
            <field name="groups_id" eval="[
                Command.set([ref('UMS_System.group_education_student')])
            ]"/>
            <!-- optional: keep signature empty -->
            <field name="signature"/>
        </record>

        <!-- Override the system parameter to use this template -->
        <record id="university_default_user_param" model="ir.config_parameter">
            <field name="key">base.default_user</field>
            <field name="value" ref="university_default_user"/>
        </record>

    </data>
</odoo>

