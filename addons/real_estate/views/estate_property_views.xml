<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ========================= LIST VIEW ========================= -->
    <record id="estate_property_view_list" model="ir.ui.view">
        <field name="name">estate.property.list</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <list string="Properties">
                <field name="name"/>
                <field name="postcode"/>
                <field name="date_availability" string="Available From"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="state"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <!-- ========================= FORM VIEW ========================= -->
    <record id="estate_property_view_form" model="ir.ui.view">
        <field name="name">estate.property.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="Property">
                <sheet>
                    <!-- Big title -->
                    <h1>
                        <field name="name" placeholder="My new house"/>
                    </h1>

                    <!-- Two-column summary -->
                    <group>
                        <group>
                            <field name="postcode"/>
                            <field name="date_availability" string="Available From"/>
                        </group>
                        <group>
                            <field name="expected_price" string="Expected Price" required="1"/>
                            <!-- keep selling price read-only in UI (tutorial style) -->
                            <field name="selling_price" string="Selling Price" readonly="1"/>
                        </group>
                    </group>

                    <!-- Tabs -->
                    <notebook>
                        <page string="Description">
                            <group>
                                <field name="description" placeholder="when duplicated, status and date are not copied"/>
                            </group>

                            <group>
                                <field name="bedrooms"/>
                                <field name="living_area" string="Living Area (sqm)"/>
                                <field name="facades"/>
                            </group>

                            <group>
                                <field name="garage"/>
                                <field name="garden"/>
                                <!-- Odoo 17/18: modifiers instead of attrs -->
                                <field name="garden_area"
                                       string="Garden Area (sqm)"
                                       modifiers="{'invisible': [('garden', '=', False)]}"/>
                                <field name="garden_orientation"
                                       modifiers="{'invisible': [('garden', '=', False)]}"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- ========================= SEARCH VIEW ========================= -->
    <record id="estate_property_view_search" model="ir.ui.view">
        <field name="name">estate.property.search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search string="Search Properties">
                <!-- quick search fields -->
                <field name="name"/>
                <field name="postcode"/>
                <field name="date_availability" string="Available From"/>
                <field name="expected_price"/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="garden"/>

                <!-- Filters -->
                <!-- Available = state in (new, offer_received) -->
                <filter name="available_props"
                        string="Available"
                        domain="['|', ('state', '=', 'new'), ('state', '=', 'offer_received')]"/>

                <!-- Group By -->
                <separator/>
                <filter name="group_by_postcode"
                        string="Postcode"
                        context="{'group_by': 'postcode'}"/>
            </search>
        </field>
    </record>

    <!-- ========================= ACTION ========================= -->
    <record id="estate_property_action" model="ir.actions.act_window">
        <field name="name">Properties</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">list,form</field>
        <!-- search view will be auto-picked by model match -->
    </record>

    <!-- ========================= MENUS ========================= -->
    <menuitem id="estate_menu_root" name="Estate"/>
    <menuitem id="estate_menu_sales" name="Properties" parent="estate_menu_root"/>
    <menuitem id="estate_menu_properties_action"
              parent="estate_menu_sales"
              action="estate_property_action"/>
</odoo>
