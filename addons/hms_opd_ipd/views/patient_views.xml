<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_hms_patient_form_inherit" model="ir.ui.view">
        <field name="name">hms.base.patient.form.inherit</field>
        <field name="model">hms.base.patient</field>
        <field name="inherit_id" ref="hms_base.view_hms_base_patient_form"/>
        <field name="arch" type="xml">

            <!-- Main OPD/IPD Count -->
            <xpath expr="//form" position="inside">
                <header>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" name="action_view_admissions" type="object" icon="fa-medkit">
                            <field name="admission_count" widget="statinfo"/>
                            <span class="o_stat_text">All Admissions</span>
                        </button>
                    </div>
                </header>
            </xpath>

            <!-- OPD/IPD Tabs -->
            <xpath expr="//field[@name='doctor_id']/parent::group" position="after">
                <notebook>
                    <page string="OPD Admissions">
                        <header>
                            <button name="action_view_opd_admissions" type="object" class="btn-secondary" string="Open All OPD" icon="fa-list"/>
                        </header>
                        <field name="admission_ids" context="{'default_admission_type': 'opd'}"
                               domain="[('admission_type','=','opd')]">
                            <list>
                                <field name="admission_date"/>
                                <field name="doctor_id"/>
                                <field name="state" widget="badge"/>
                            </list>
                        </field>
                    </page>
                    <page string="IPD Admissions">
                        <header>
                            <button name="action_view_ipd_admissions" type="object" class="btn-secondary" string="Open All IPD" icon="fa-list"/>
                        </header>
                        <field name="admission_ids" context="{'default_admission_type': 'ipd'}"
                               domain="[('admission_type','=','ipd')]">
                            <list>
                                <field name="bed_no"/>
                                <field name="admission_date"/>
                                <field name="discharge_date"/>
                                <field name="doctor_id"/>
                                <field name="state" widget="badge"/>
                            </list>
                        </field>
                    </page>
                </notebook>
            </xpath>
        </field>
    </record>

    <!-- List view: keep admission count -->
    <record id="view_hms_patient_list_inherit" model="ir.ui.view">
        <field name="name">hms.base.patient.list.inherit</field>
        <field name="model">hms.base.patient</field>
        <field name="inherit_id" ref="hms_base.view_hms_base_patient_list"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='blood_type']" position="after">
                <field name="admission_count" widget="statinfo"/>
            </xpath>
        </field>
    </record>
</odoo>