<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_employee_form_inherit_hms" model="ir.ui.view">
        <field name="name">hr.employee.form.inherit.hms</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <!-- Stat button inside existing header -->
            <xpath expr="//form/header" position="inside">
                <button name="action_open_related_doctors"
                        type="object"
                        class="oe_stat_button"
                        icon="fa-user-md">
                    <field name="hms_doctor_count" widget="statinfo" string="Doctor(s)"/>
                </button>
            </xpath>

            <!-- HMS tab -->
            <xpath expr="//notebook" position="inside">
                <page string="HMS">
                    <group>
                        <field name="hms_department_id"/>
                        <field name="hms_salary"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

    <record id="action_hms_hr_employees" model="ir.actions.act_window">
        <field name="name">Employees</field>
        <field name="res_model">hr.employee</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_hms_hr_root" name="HR" parent="hms_base.menu_hms_base_root" sequence="40"/>
    <menuitem id="menu_hms_hr_employees" name="Employees" parent="menu_hms_hr_root" action="action_hms_hr_employees"/>
</odoo>
