<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Hook after registry is ready to inject mixin based on rules -->
    <record id="ir_cron_activity_injector" model="ir.cron">
        <field name="name">Activity Logger: Inject Mixin</field>
        <field name="model_id" ref="base.model_ir_actions_server"/>
        <field name="state">code</field>
        <field name="code">env['activity.rule'] and env['activity_logger.injector']._run()</field>
        <field name="interval_type">days</field>
        <field name="interval_number">9999</field>
        <field name="active" eval="False"/>
    </record>
</odoo>


