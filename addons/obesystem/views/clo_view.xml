<odoo>
    <!-- Define the action for CLOs -->
    <record id="action_clo" model="ir.actions.act_window">
        <field name="name">CLOs</field>
        <field name="res_model">obesystem.clo</field>
        <field name="view_mode">list,form</field>
        <field name="help">Manage Course Learning Outcomes</field>
    </record>

    <!-- Define CLO Views -->
    <record id="view_clo_form" model="ir.ui.view">
        <field name="name">obesystem.clo.form</field>
        <field name="model">obesystem.clo</field>
        <field name="arch" type="xml">
            <form string="Course Learning Outcome">
                <sheet>
                    <group>
                        <field name="title"/>
                        <field name="description"/>
                        <field name="plo_ids" widget="many2many_tags"/>
                        <field name="course_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_clo_list" model="ir.ui.view">
        <field name="name">obesystem.clo.list</field>
        <field name="model">obesystem.clo</field>
        <field name="arch" type="xml">
            <list>
                <field name="title"/>
                <field name="description"/>
            </list>
        </field>
    </record>

    <!-- Menu Item for CLOs -->
    <menuitem id="menu_clo" name="CLOs" parent="menu_obesystem" action="action_clo"/>
</odoo>
