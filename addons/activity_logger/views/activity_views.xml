<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Sessions -->
    <record id="view_activity_session_list" model="ir.ui.view">
        <field name="name">activity.session.list</field>
        <field name="model">activity.session</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="session_key"/>
                <field name="user_id"/>
                <field name="create_date"/>
            </list>
        </field>
    </record>
    <record id="view_activity_session_form" model="ir.ui.view">
        <field name="name">activity.session.form</field>
        <field name="model">activity.session</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="session_key"/>
                        <field name="user_id"/>
                        <field name="create_date" readonly="1"/>
                    </group>
                    <notebook>
                        <page string="Requests">
                            <field name="request_ids">
                                <list>
                                    <field name="name"/>
                                    <field name="path"/>
                                    <field name="method"/>
                                    <field name="create_date"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <record id="action_activity_session" model="ir.actions.act_window">
        <field name="name">Sessions</field>
        <field name="res_model">activity.session</field>
        <field name="view_mode">list,form</field>
        <field name="context">{}</field>
    </record>
    <menuitem id="menu_activity_session_action" parent="menu_activity_sessions" action="action_activity_session"/>

    <!-- Requests -->
    <record id="view_activity_request_list" model="ir.ui.view">
        <field name="name">activity.request.list</field>
        <field name="model">activity.request</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="path"/>
                <field name="method"/>
                <field name="user_id"/>
                <field name="session_id"/>
                <field name="create_date"/>
            </list>
        </field>
    </record>
    <record id="view_activity_request_form" model="ir.ui.view">
        <field name="name">activity.request.form</field>
        <field name="model">activity.request</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name" readonly="1"/>
                        <field name="path"/>
                        <field name="root_url"/>
                        <field name="method"/>
                        <field name="user_id"/>
                        <field name="session_id"/>
                        <field name="context_json" widget="text"/>
                    </group>
                    <notebook>
                        <page string="Changes">
                            <field name="change_ids">
                                <list>
                                    <field name="name"/>
                                    <field name="model"/>
                                    <field name="method"/>
                                    <field name="mode"/>
                                    <field name="create_date"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <record id="action_activity_request" model="ir.actions.act_window">
        <field name="name">Requests</field>
        <field name="res_model">activity.request</field>
        <field name="view_mode">list,form</field>
    </record>
    <menuitem id="menu_activity_request_action" parent="menu_activity_requests" action="action_activity_request"/>

    <!-- Changes -->
    <record id="view_activity_change_list" model="ir.ui.view">
        <field name="name">activity.change.list</field>
        <field name="model">activity.change</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="model"/>
                <field name="method"/>
                <field name="mode"/>
                <field name="user_id"/>
                <field name="request_id"/>
                <field name="session_id"/>
                <field name="create_date"/>
            </list>
        </field>
    </record>
    <record id="view_activity_change_form" model="ir.ui.view">
        <field name="name">activity.change.form</field>
        <field name="model">activity.change</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name" readonly="1"/>
                        <field name="model_id"/>
                        <field name="model"/>
                        <field name="res_ids_text"/>
                        <field name="method"/>
                        <field name="mode"/>
                        <field name="user_id"/>
                        <field name="request_id"/>
                        <field name="session_id"/>
                        <field name="create_date" readonly="1"/>
                    </group>
                    <notebook>
                        <page string="Field Changes">
                            <field name="field_change_ids">
                                <list>
                                    <field name="field_name"/>
                                    <field name="field_label"/>
                                    <field name="old_value_text"/>
                                    <field name="new_value_text"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <record id="action_activity_change" model="ir.actions.act_window">
        <field name="name">Changes</field>
        <field name="res_model">activity.change</field>
        <field name="view_mode">list,form</field>
    </record>
    <menuitem id="menu_activity_change_action" parent="menu_activity_changes" action="action_activity_change"/>

    <!-- Report -->
    <record id="view_activity_report_list" model="ir.ui.view">
        <field name="name">activity.report.list</field>
        <field name="model">activity.report</field>
        <field name="arch" type="xml">
            <list>
                <field name="create_date"/>
                <field name="model"/>
                <field name="res_ids_text"/>
                <field name="change_method"/>
                <field name="field_name"/>
                <field name="old_value_text"/>
                <field name="new_value_text"/>
                <field name="path"/>
                <field name="user_id"/>
            </list>
        </field>
    </record>
    <record id="action_activity_report" model="ir.actions.act_window">
        <field name="name">Activity Report</field>
        <field name="res_model">activity.report</field>
        <field name="view_mode">list</field>
        <field name="context">{}</field>
    </record>
    <menuitem id="menu_activity_report_action" parent="menu_activity_report" action="action_activity_report"/>

    <!-- Rules -->
    <record id="view_activity_rule_list" model="ir.ui.view">
        <field name="name">activity.rule.list</field>
        <field name="model">activity.rule</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="active"/>
                <field name="model"/>
                <field name="mode"/>
                <field name="track_create"/>
                <field name="track_write"/>
                <field name="track_unlink"/>
                <field name="track_read"/>
                <field name="track_export"/>
            </list>
        </field>
    </record>
    <record id="view_activity_rule_form" model="ir.ui.view">
        <field name="name">activity.rule.form</field>
        <field name="model">activity.rule</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="active"/>
                        <field name="model_id"/>
                        <field name="mode"/>
                    </group>
                    <group string="Operations">
                        <field name="track_create"/>
                        <field name="track_write"/>
                        <field name="track_unlink"/>
                        <field name="track_read"/>
                        <field name="track_export"/>
                    </group>
                    <group string="Exclusions">
                        <field name="excluded_user_ids" widget="many2many_tags"/>
                        <field name="excluded_field_ids" widget="many2many_tags"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="action_activity_rule" model="ir.actions.act_window">
        <field name="name">Rules</field>
        <field name="res_model">activity.rule</field>
        <field name="view_mode">list,form</field>
    </record>
    <menuitem id="menu_activity_rule_action" parent="menu_activity_rules" action="action_activity_rule"/>
</odoo>


